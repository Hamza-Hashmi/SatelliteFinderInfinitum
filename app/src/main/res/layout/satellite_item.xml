<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:strokeColor="#9FF0FF"
    app:strokeWidth="@dimen/_1sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:padding="@dimen/_5sdp"
         android:layout_height="match_parent">


         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="satellite name"
             app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toStartOf="parent"
             android:textSize="@dimen/_14ssp"
             android:layout_marginStart="@dimen/_10sdp"
             android:fontFamily="@font/roboto_medium"
             android:maxLines="1"
             android:textColor="@color/primary"
             android:layout_marginTop="@dimen/_5sdp"
             android:id="@+id/satTitle"
             app:layout_constraintTop_toTopOf="parent"/>


         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="3"
             android:id="@+id/ll"
             android:layout_marginTop="@dimen/_8sdp"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginStart="@dimen/_10sdp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@id/satTitle"
             app:layout_constraintStart_toStartOf="parent">


             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:hint="Elevation:51"
                 android:textSize="@dimen/_11ssp"
                 android:id="@+id/satElevation"/>


             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:hint="(71.7  E)"
                 android:textSize="@dimen/_11ssp"
                 android:id="@+id/sat_angel"/>

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:hint="(71.7  E)"
                 android:textSize="@dimen/_11ssp"
                 android:id="@+id/sat_azimut"/>



         </LinearLayout>
     </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>